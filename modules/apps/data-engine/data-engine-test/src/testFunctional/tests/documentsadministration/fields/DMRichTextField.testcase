		DataEngine.editFieldRepeatable(fieldFieldLabel = "Repeatable");

		DDLDataDefinition.save();

		Navigator.gotoNavItem(navItem = "Documents and Media");

		DMNavigator.gotoAddDocumentTypeCP(dmDocumentTypeName = "New Document Type");

		DataEngine.addRepeatableField(fieldName = "Repeatable");

		PortletEntry.inputTitle(title = "Repeated Document Type");

		PortletEntry.publish();

		DMDocumentType.selectDocumentTypeFrame();

		LexiconEntry.openEntryMenu(rowEntry = "Repeated Document Type");

		MenuItem.click(menuItem = "Edit");

		DataEngine.assertFieldRepeated(
			key_fieldReference = "Rich Text",
			key_index = "2");
	}

